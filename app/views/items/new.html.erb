<div class="container">
  <%= form_for @item, html: {class: "form-horizontal"} do |f| %>
  <h2>Food!</h2>
    <div class="form-group">
      <%=f.label :name,  class: "col-sm-2 control-label" %>
      <div class="col-sm-4">
        <%=f.hidden_field :category, value: "food"%>
        <%=f.text_field :name, class: "form-control"%>
      </div>
    </div>
  <% end %>

  <%= form_for @item, html: {class: "form-horizontal"} do |f| %>
