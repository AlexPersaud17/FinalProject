<div class="background2 lighten">

<div class="forms-container container">
  <h2 class=""> Change Password </h2>

  <%= render :partial => "./errors"%>

  <%= form_for @user, html: {class: "form-horizontal"} do |f| %>
    <div class="form-group">
      <%=f.label :first_name,  class: "col-sm-2 control-label" %>
      <div class="col-sm-3">
        <%=f.text_field :first_name, value: "", placeholder: "Enter your first name:", class: "form-control"%>
      </div>
    </div>

    <div class="form-group">
      <%=f.label :last_name,  class: "col-sm-2 control-label" %>
      <div class="col-sm-3">
        <%=f.text_field :last_name, value: "", placeholder: "Enter your last name:",  class: "form-control"%>
      </div>
    </div>

    <div class="form-group">
      <%=f.label :password,  class: "col-sm-2 control-label" %>
      <div class="col-sm-3">
        <%=f.password_field :password,  class: "form-control", placeholder: "Choose a new password:"%>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-3">
        <%=f.submit "Save", class: "btn btn-default" %>
      </div>
    </div>

  <% end %>
</div>
</div>
