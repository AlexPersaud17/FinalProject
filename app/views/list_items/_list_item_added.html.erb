<% if item.category == "Food"%>
  <td><%=link_to item.name.capitalize, item_path(item) %></td>
<% else %>
  <td><%=item.name.capitalize%></td>
<%end%>
<% unless PartyItem.find_by(party: party, item: item).list_item %>
  <div class="append-here">
    <td><%= button_to("Add To List", party_item_list_items_path(party, item), class:"item-button" )%></td>
    <td><%= link_to 'X', party_item_path(party, item), method: :delete, class: "remove-item" if host?(party)%></td>
  </div>
<% else %>
  <td>Will be brought by: <%=PartyItem.find_by(party: party, item: item).user.full_name%></td>
<%end%>
