<div class="forms-container container">
  <h2 class=""> Let's Get This Party Started! </h2>

  <%= render :partial => "./errors"%>

  <%= form_for @party, html: {class: "form-horizontal"} do |f| %>
    <div class="form-group">
      <%=f.label :name,  class: "col-sm-2 control-label" %>
      <div class="col-sm-4">
        <%=f.text_field :name,  class: "form-control"%>
      </div>
    </div>

    <div class="form-group">
      <%=f.label :description,  class: "col-sm-2 control-label" %>
      <div class="col-sm-4">
        <%=f.text_area :description,  class: "form-control"%>
      </div>
    </div>

    <div class="form-group">
      <%=f.label :location,  class: "col-sm-2 control-label" %>
      <div class="col-sm-4">
        <%=f.text_field :location,  class: "form-control"%>
      </div>
    </div>

    <div class="form-group">
      <%=f.label "Date & Time",  class: "col-sm-2 control-label" %>
      <div class="col-sm-4">
        <%=f.datetime_local_field :date,  class: "form-control"%>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-3">
        <%=f.submit "It's Popp'n", class: "btn btn-default" %>
      </div>
    </div>

  <% end %>
</div>
